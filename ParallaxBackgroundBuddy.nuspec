<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
	<metadata>
		<id>ParallaxBackgroundBuddy</id>
		<version>2.0.1</version>
		<title>ParallaxBackgroundBuddy</title>
